<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    app:layout_anchorGravity="center"
    tools:context=".Admin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bac">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#FA232020"
            app:title="HIA-ichi"
            app:titleTextColor="@color/cardview_light_background" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="675dp"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="1dp"
            android:foregroundGravity="center"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:id="@+id/Userpage"
                    android:layout_width="300dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="12dp">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/update" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom|center"
                        android:gravity="center"
                        android:text="Go to  Users Home Page"
                        android:textColor="#0B0808"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/UploadCourse"
                    android:layout_width="300dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="12dp">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="57dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/videomarketing" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="bottom|center"
                        android:gravity="center"
                        android:text="Upload Lacture Video"
                        android:textColor="#0B0808"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/available"
                    android:layout_width="300dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="30dp"
                    android:background="#E1DADA"
                    app:cardCornerRadius="12dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:layout_gravity="bottom|center"
                        android:gravity="center"
                        android:text="Set Courses Visibility"
                        android:textColor="#070606"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="64dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/onlineeducation" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>